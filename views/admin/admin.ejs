        var text = document.getElementById(d);
        text.innerHTML="Request Approved";
        var b='calc'+i;
        var btcalc = document.getElementById(b);
        btcalc.disabled=true;
    }
    function  removerejectbutton(i) {
        var a='approvebt'+i;
        var btn=document.getElementById(a);
        btn.disabled =true;
        var c='rejectbt'+i;
